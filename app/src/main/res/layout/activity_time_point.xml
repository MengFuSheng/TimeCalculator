<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 应用标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginEnd="8dp"
                app:tint="#3F51B5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时间点推算"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <ImageButton
                android:id="@+id/btn_help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_help_outline"
                 app:tint="#757575" />
        </LinearLayout>

        <!-- 时间制式选择卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间制式设置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_time_format"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/rg_time_format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_24h"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="24小时制"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:checked="true"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_12h"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12小时制"
                        android:textSize="16sp"
                        android:padding="12dp"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换制式会影响时间显示格式"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 基准时间卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_base_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基准时间"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_base_time"
                    android:layout_marginBottom="16dp"/>

                <!-- 日期时间显示 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_base_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未选择"
                        android:textSize="18sp"
                        android:textColor="#3F51B5"
                        android:padding="12dp"
                        android:background="@drawable/bg_outlined"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_base_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未选择"
                        android:textSize="18sp"
                        android:textColor="#3F51B5"
                        android:padding="12dp"
                        android:background="@drawable/bg_outlined"/>
                </LinearLayout>

                <!-- 选择按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_select_base_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="选择日期"
                        android:backgroundTint="#2196F3"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn_select_base_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="选择时间"
                        android:backgroundTint="#2196F3"/>
                </LinearLayout>

                <!-- 快捷设置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_set_base_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设为现在"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn_clear_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:backgroundTint="#F44336"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btn_copy_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制时间"
                        android:backgroundTint="#9C27B0"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 时间增减设置卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间增减设置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_add_time"
                    android:layout_marginBottom="16dp"/>

                <!-- 操作选择 -->
                <RadioGroup
                    android:id="@+id/rg_operation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_add"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="增加时间 (+)"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:checked="true"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_subtract"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="减少时间 (-)"
                        android:textSize="16sp"
                        android:padding="12dp"/>
                </RadioGroup>

                <!-- 时间值输入 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_duration_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="输入数值"
                        android:inputType="numberDecimal"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:background="@drawable/bg_outlined"
                        android:layout_marginEnd="12dp"/>

                    <Spinner
                        android:id="@+id/spinner_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- 预设时长按钮 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用时长："
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_preset_30m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="30分钟"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn_preset_1h"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1小时"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn_preset_1d"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1天"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_preset_1w"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1周"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn_preset_1m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1个月"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn_preset_1y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1年"
                        android:backgroundTint="#E8EAF6"
                        android:textColor="#3F51B5"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 计算结果卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推算结果"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_result_time"
                    android:layout_marginBottom="16dp"/>

                <!-- 主要结果 -->
                <TextView
                    android:id="@+id/tv_result_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请先设置基准时间和增减时长"
                    android:textSize="20sp"
                    android:textColor="#3F51B5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/bg_highlight"
                    android:layout_marginBottom="16dp"/>

                <!-- 计算按钮 -->
                <Button
                    android:id="@+id/btn_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="开始推算"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_calculate"/>

                <!-- 操作按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btn_copy_result"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="复制结果"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn_set_as_base"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="设为基准"
                        android:backgroundTint="#2196F3"/>
                </LinearLayout>

                <!-- 详细结果 -->
                <TextView
                    android:id="@+id/tv_detailed_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 历史记录卡片（可选） -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用提示"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_info"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 先选择基准日期和时间\n• 输入要增加或减少的时间长度\n• 可选择常用时长预设\n• 结果可以复制或设为新的基准\n• 支持12/24小时制显示"
                    android:textSize="14sp"
                    android:textColor="#616161"
                    android:lineSpacingExtra="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 底部间距 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    </LinearLayout>
</ScrollView>